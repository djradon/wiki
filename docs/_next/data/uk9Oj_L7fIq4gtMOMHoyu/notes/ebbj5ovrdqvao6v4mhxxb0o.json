{"pageProps":{"note":{"id":"ebbj5ovrdqvao6v4mhxxb0o","title":"Where‘s the Simple Semantic Web Authoring Tool?","desc":"","updated":1729157278177,"created":1729093723913,"custom":{},"fname":"blogs.the-old-man-in-the-cave.2024-10-16-wheres-the-semantic-web-tooling","type":"note","vault":{"fsPath":"public-notes","remote":{"type":"git","url":"git@github.com:djradon/public-notes.git"},"name":"public-notes"},"contentHash":"11d1bf0ec50e530fd8b04c39094343e4","links":[{"type":"wiki","from":{"fname":"blogs.the-old-man-in-the-cave.2024-10-16-wheres-the-semantic-web-tooling","id":"ebbj5ovrdqvao6v4mhxxb0o","vaultName":"public-notes"},"value":"blogs.carpe-noctem","position":{"start":{"line":10,"column":309,"offset":757},"end":{"line":10,"column":331,"offset":779},"indent":[]},"xvault":false,"sameFile":false,"to":{"fname":"blogs.carpe-noctem"}},{"type":"wiki","from":{"fname":"blogs.the-old-man-in-the-cave.2024-10-16-wheres-the-semantic-web-tooling","id":"ebbj5ovrdqvao6v4mhxxb0o","vaultName":"public-notes"},"value":"t.km.ontology.foundational","alias":"foundational ontology","position":{"start":{"line":12,"column":50,"offset":831},"end":{"line":12,"column":102,"offset":883},"indent":[]},"xvault":false,"sameFile":false,"to":{"fname":"t.km.ontology.foundational"}},{"type":"wiki","from":{"fname":"blogs.the-old-man-in-the-cave.2024-10-16-wheres-the-semantic-web-tooling","id":"ebbj5ovrdqvao6v4mhxxb0o","vaultName":"public-notes"},"value":"prdct.rdf.turtle","alias":"Turtle","position":{"start":{"line":16,"column":47,"offset":1033},"end":{"line":16,"column":74,"offset":1060},"indent":[]},"xvault":false,"sameFile":false,"to":{"fname":"prdct.rdf.turtle"}},{"type":"wiki","from":{"fname":"blogs.the-old-man-in-the-cave.2024-10-16-wheres-the-semantic-web-tooling","id":"ebbj5ovrdqvao6v4mhxxb0o","vaultName":"public-notes"},"value":"prdct.vscode","alias":"VSCode","position":{"start":{"line":16,"column":147,"offset":1133},"end":{"line":16,"column":170,"offset":1156},"indent":[]},"xvault":false,"same